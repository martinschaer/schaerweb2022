{
  "name": "schaerweb",
  "version": "1.1.0",
  "description": "Martin Schaer website",
  "author": "Martin Schaer",
  "license": "ISC",
  "source": "src/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "imagemin": "./bin/imagemin.mjs",
    "start": "parcel 'public/**/*.html' --open",
    "build": "rm -rf dist && parcel build 'public/**/*.(html|xml)'",
    "lint:style": "stylelint \"src/**/*.?(s)css\"",
    "lint:script": "eslint \"src/**/*.{j,t}s\"",
    "lint": "npm run lint:script & npm run lint:style",
    "format:check": "prettier --check \"src/**/*\"",
    "format": "prettier --write \"src/**/*\""
  },
  "dependencies": {
    "@types/p5": "^1.4.1",
    "matter-js": "^0.18.0",
    "normalize.css": "^8.0.1",
    "p5": "^1.4.1",
    "poly-decomp": "^0.3.0"
  },
  "devDependencies": {
    "@parcel/packager-xml": "^2.3.2",
    "@parcel/transformer-sass": "^2.3.2",
    "@parcel/transformer-xml": "^2.3.2",
    "@types/matter-js": "^0.17.7",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "parcel": "^2.3.2",
    "prettier": "2.5.1",
    "stylelint": "^14.5.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "^4.5.5"
  }
}

{{- $list := slice -}}
{{- range .Pages -}}
  {{- $cover := "" -}}
  {{- if .Params.cover -}}
    {{- $cover = (print .RelPermalink .Params.cover) -}}
  {{- end -}}
  {{- $list = $list | append (dict
    "Title" .Title
    "Permalink" .Permalink
    "Summary" .Summary
    "Cover" $cover
    "Price" .Params.price
    "Lastmod" .Lastmod
    "Categories" .Params.categories
  ) -}}
{{- end -}}
{{- $list | jsonify -}}
